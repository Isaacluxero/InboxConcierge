# ===========================================
# Inbox Concierge - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your actual values

# Database
# For local PostgreSQL: postgresql://username@localhost:5432/inbox_concierge
# For Railway: Get from Railway dashboard
# For Supabase: Get from project settings
DATABASE_URL=postgresql://user:password@localhost:5432/inbox_concierge

# Google OAuth Credentials
# Get from: https://console.cloud.google.com/
# 1. Create project
# 2. Enable Gmail API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URI
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Anthropic API
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# Server Configuration
NODE_ENV=development
PORT=3000
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=your_random_secret_key_at_least_32_characters_long

# Frontend URL
FRONTEND_URL=http://localhost:5173

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
